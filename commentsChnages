const handleAddNestedCondition = (index) => {
    // Add a nested condition to a group condition
    const newConditions = [...conditions];
    // Get the source value of the group condition
    const source = newConditions[index].data.source;
    // If the source is group, add a default nested condition
    if (source === 'Group') {
        newConditions[index].conditions.push({ type: 'condition', data: {} });
    }
    // If the source is request, add a nested condition with the same data as the group condition
    if (source === 'Request') {
        newConditions[index].conditions.push({ 
            type: 'condition', 
            data: {
                source: source,
                requestAttribute: newConditions[index].data.groupAttribute,
                requestOp: newConditions[index].data.groupOp,
                requestValue: newConditions[index].data.groupValue
            } 
        });
    }
    setConditions(newConditions);
};
